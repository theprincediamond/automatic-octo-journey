@model AppRole
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col">
        <p>
            @Model.Name is going to be deleted.
        </p>
        <form asp-controller="Role" asp-action="DeleteRoleConfirm" method="post">
            <input type="hidden" name="id" value="@Model.Id">
            @if(ViewBag.Users.Count > 0){
                @foreach(var item in ViewBag.Users){
                    <p>
                        @item
                    </p>
                }
            }
            else{
                <button type="submit" class="btn btn-danger">Delete</button>
            }
            <a class="btn btn-primary" asp-controller="Role" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>